@model OneMits.Models.Category.CategoryIndexModel

<div class="row">
    <div class="col-md-8">
        <span class="contact100-froum-title">
            Forums
        </span>
    </div>
    <div class="col-md-4">
        <div class="container-contact100-forum-btn" style="margin: 54px 0px 0px 227px;">
            <a href="admincreate.html">
                <button class="contact100-form-btn">
                    <span>
                        Add Forum
                        <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                    </span>
                </button>
            </a>
        </div>
    </div>
</div>
@foreach (var forum in Model.ForumList)
{
    <div class="w3-container  city">
        <div class="set-container-fr" style="padding: none">
            <div class="row">
                <div class="col-md-10">
                    <div class="container-forum">
                        <form class="contact100-form validate-form">
                            <a hasp-controller="Forum" asp-action="Topic" asp-route-id="@forum.Id">
                                <span class="contact100-forum-title">
                                    @forum.Name
                                </span>

                                <span class="label-input100">Number Of Post : 4</span>
                                <p class="input-fr">@forum.Description</p>
                            </a>
                        </form>
                    </div>
                    <div id="dropDownSelect1"></div>
                </div>
                <div class="col-md-2">
                    <button class="button-add"><a href="createforum.html"><span>Add Post</span></a></button>
                </div>
            </div>

        </div>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <span class="contact100-froum-title">
            Post
        </span>
    </div>
    <div class="col-md-4">
        <div class="container-contact100-forum-btn" style="margin: 54px 0px 0px 227px;">
            <a href="admincreate.html">
                <button class="contact100-form-btn" asp-controller="Forum" asp-action="Topic" asp-route-id="@Model.ForumId">
                    <span>
                        Back to @Model.ForumName
                        <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                    </span>
                </button>
            </a>
        </div>
    </div>
</div>
<div id="tab1" class="w3-container  city">
    <div class="set-container">
        <div>
            <p class="question">@Model.Title</p>
        </div>

        <div class="answer">
            <p>
                @Html.Raw(Model.PostContent)</span>
            </p>
        </div>
        <div>
            <p class="by-part">
                By - <a asp-controller="Profile" asp-action="Detail" asp-route-id="@Model.AuthorId" class="take-part">
                    @Model.AuthorName
                </a>&nbsp &nbsp Category - <a href="#" class="take-part">Dance</a>
            </p>
        </div>
        <div class="margin"> </div>
        <div class="share">
            <a target="_blank"><i class="fa fa-heart" style="font-size:25px;"></i></a>
            <a target="_blank"><i class="fa fa-history" style="font-size:25px;"></i> @Model.Created</a>
            <a target="_blank"><i class="fa fa-comment" style="font-size:25px;"></i> 5 Answer</a>

            <a href="#" target="_blank">
                <i class="fa fa-share-alt-square" style="font-size:25px;"></i>
                <p href="#" class="sbutton">Share</p>
            </a>
        </div>
    </div>
</div>
@if (User.Identity.IsAuthenticated)
{
    <button class="btn-re"><a asp-controller="Reply" asp-action="Create" asp-route-id="@Model.Id">Add Reply</a></button>
}

@if (Model.Replies.Any())
{
    foreach (var reply in Model.Replies)
    {
        <div id="tab1" class="w3-container  city">
            <div class="set-container">
                <br>
                <span class="reply-title">
                    Replies....
                </span><br>
                <div class="margin"> </div>
                <div class="answer">
                    <p>
                        @Html.Raw(reply.ReplyContent)
                    </p>
                </div>

                <div>
                    <p class="by-Repart ml-50">
                        <strong>By :</strong>
                        <a asp-controller="Profile" asp-action="Detail" asp-route-id="@reply.AuthorId" class="take-part">
                            @reply.AuthorName
                        </a>
                    </p>
                    <p class="by-Repart ml-50">
                        <strong>By :</strong>
                        <a class="take-part">
                            @reply.Created
                        </a>
                    </p>

                </div>

                <div class="margin"> </div> <br><br>

            </div>
        </div>
    }

<button class="btn-re" style="margin-left: 600px">More Answers</button>
}

else
{
<div class="noPosts">
    <h3>
        There are no Replies to this post.
    </h3>
</div>
}


<div class="w3-container  city">
    <div class="set-container-re">
        <br>
        <span class="rply-title">
            Add Your Reply
        </span><br>
        <div class="margin"> </div><br>
        <form class="contact100-form validate-form" asp-action="AddReply" method="post" id="addPostForm">
        <div class="container-Recontact">
            <div class="wrap-input100 validate-input" data-validate="Message is required">
                <label class="label-input100" asp-for="ReplyContent">Reply</label>
                <textarea asp-for="ReplyContent" class="input100" name="message" placeholder="Your Review About The Question..."></textarea>
                <span asp-validation-for="ReplyContent" class="focus-input100"></span>
            </div>
            <div class="container-contact100-form-btn">
                <button class="contact100-form-btn">
                    <span>
                        Submit
                        <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                    </span>
                </button>
            </div>
        </div>
            <input asp-for="AuthorId" type="hidden" />
                <input asp-for="PostId" type="hidden" />
                <input asp-for="ForumId" type="hidden" /
        </form>
    </div>
</div>